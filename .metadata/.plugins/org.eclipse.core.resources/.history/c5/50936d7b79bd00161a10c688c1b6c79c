package ArvoreBinaria;

public class No {
	
	//Atributos de um nó
	public No esq;
	public No dir;
	public char valor;
	
	//Construtor sem parâmetros
	public No(){
		this.esq = null;
		this.dir = null;
		this.valor = 0;
	}
	
	//Construtor com o parâmetro valor que é utilizado para a criação de um nó
	public No(char valor){
		this.valor = valor;
	}
	
	//Define um nó como esquerdo de outro
	public void setEsq(No no){
		this.esq = no;
	}
	
	//Define um nó como direito de outro
	public void setDir(No no){
		this.dir = no;
	}
	
	//Retorna o valor de um nó
	public char getValor(){
		return this.valor;
	}
	
	//Retorna o nó esquerdo de outro
	public No getEsq(){
		return this.esq;
	}
	
	//Retorna o nó direito de outro
	public No getDir(){
		return this.dir;
	}
	
	public void preOrdem(No no){
		if(no != null){
			
			System.out.print(no.getValor());
			preOrdem(no.getEsq());			
			preOrdem(no.getDir());
		}
	}
}
